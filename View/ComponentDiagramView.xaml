<UserControl x:Class="QuickArch.View.ComponentDiagramView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vw ="clr-namespace:QuickArch.View"
             xmlns:vm ="clr-namespace:QuickArch.ViewModel"
             x:Name="ComponentDiagramControl"
             Width="650" Height="490" Loaded="Diagram_Created">
    <UserControl.Resources>
        <DataTemplate DataType="{x:Type vm:ComponentViewModel}" x:Key="ComponentTemplate">
            <vw:ComponentView />
        </DataTemplate>
        <Style TargetType="{x:Type ItemsControl}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ItemsControl}">
                            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                                <ItemsPresenter />
                            </ScrollViewer>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <ItemsControl HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="White"
                  ItemsSource="{Binding Path=AllComponents}" ItemTemplate="{StaticResource ComponentTemplate}" 
                  x:Name="myItemsControl" Height="{Binding ElementName=ComponentDiagramControl, Path=Height}" Width="{Binding ElementName=ComponentDiagramControl, Path=Width}">
            <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
                <Canvas Name ="myCanvas" Background="Transparent" Loaded="myCanvas_Loaded"/>
            </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>
    </ItemsControl>
</UserControl>
